<Wallpaper>:
    id: wallpaper
    source: 'images/wallpaper.jpg'
    pos_hint: {'top': 1}
    size_hint_x: 1
    size_hint_y: None
    height: 200
    fit_mode: "cover"

<TodayDateLabel>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
            pos: self.pos
    text: "Fianarantsoa 30°C"
    color: 1, 1, 1, 1
    font_size: 25
    pos_hint: {'top': 0.2}
    size_hint_x: 1
    size_hint_y: None
    height: 40

<DateLabel>:
    text: '24/06/2024'
    font_size: 20

    size_hint_x: None
    size_hint_y: None
    height: 50
    
    width: 120
    # text_size: self.width, None
    # size_hint: 1, None
    # height: self.texture_size[1]

<MinTempLabel>:
    text: '20°C'
    font_size: 20
    size_hint_x: None
    size_hint_y: None
    height: 50
    width: 60

<MaxTempLabel>:
    text: '3°C'
    font_size: 20
    size_hint_x: None
    size_hint_y: None
    height: 50
    width: 60

<HumidityLabel>:
    text: '20%'
    font_size: 20
    size_hint_x: None
    size_hint_y: None
    height: 50
    width: 60

<WeatherIcon>:
    source: 'images/weather_icons_dovora_interactive/PNG/128/angry_clouds.png'
    allow_stretch: False
    keep_ration: True
    pos_hint: {'center_y': 0.5}

    size_hint_x: None
    size_hint_y: None
    height: 40
    width: 60


<Container>:
    canvas:
        Color:
            rgb: 50/255, 117/255, 168/255
        Rectangle:
            size: self.width, self.height
            pos: self.pos
    orientation: 'horizontal'
    size_hint_x: 1
    size_hint_y: None
    height: '50dp'
    DateLabel:
        id: date_label
        #pos_hint: {'center_x': 0 + (self.width/self.parent.width)*0.5, 'center_y': 0.5}
    WeatherIcon:
        # pos_hint: {'center_x': 1/4, 'center_y': 0.5}
    MinTempLabel:
        # pos_hint: {'center_x': 2/4, 'center_y': 0.5}
    MaxTempLabel:
        # pos_hint: {'center_x': 3/4, 'center_y': 0.5}
    HumidityLabel:
        id: humidity_label
        # pos_hint: {'center_x': 1 - (self.width/self.parent.width)*0.5, 'center_y': 0.5}


<GlobalLayout>:
    orienation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    cols: 1
    spacing: 3
    # size_hint_y: wallpaper.size[1]


<MainApp>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    spacing: 3
    Label:
        text: "Welcome to WeTher"
        color: 56/255, 81/255, 90/255, 1
        size_hint_x: 1
        size_hint_y: None
        height: 40
        font_size: 30
    FloatLayout:
        size_hint_x: 1
        size_hint_y: None
        height: 200
        Wallpaper:
        TodayDateLabel:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
