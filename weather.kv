<Wallpaper>:
    id: wallpaper
    source: 'images/wallpaper.jpg'
    pos_hint: {'top': 1}
    size_hint_x: 1
    size_hint_y: None
    height: 200
    fit_mode: "cover"

<TodayDateLabel>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
            pos: self.pos
    color: 1, 1, 1, 1
    font_size: 25
    pos_hint: {'top': 0.2}
    size_hint_x: 1
    size_hint_y: None
    height: 40

<DateLabel>:
    text: self.parent.date
    font_size: 20

    size_hint_x: None
    size_hint_y: None
    height: 50
    
    width: 120


<MinTempLabel>:
    text: self.parent.min_temp
    font_size: 20
    size_hint_x: None
    size_hint_y: None
    height: 50
    width: 60

<MaxTempLabel>:
    text: self.parent.max_temp
    font_size: 20
    size_hint_x: None
    size_hint_y: None
    height: 50
    width: 60

<HumidityLabel>:
    text: self.parent.humidity_percentage
    font_size: 20
    size_hint_x: None
    size_hint_y: None
    height: 50
    width: 60

<WeatherIcon>:
    source: 'images/weather_icons_dovora_interactive/PNG/128/angry_clouds.png'
    allow_stretch: False
    keep_ration: True
    pos_hint: {'center_y': 0.5}

    size_hint_x: None
    size_hint_y: None
    height: 40
    width: 60


<Container>:
    canvas:
        Color:
            rgb: 50/255, 117/255, 168/255
        Rectangle:
            size: self.width, self.height
            pos: self.pos
    orientation: 'horizontal'
    size_hint_x: 1
    size_hint_y: None
    height: '50dp'
    DateLabel:
        id: date_label
    WeatherIcon:
    MinTempLabel:
    MaxTempLabel:
    HumidityLabel:
        id: humidity_label

<GlobalLayout>:
    orienation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    cols: 1
    spacing: 3

<WelcomeLabel>:
    text: "Welcome to WeTher"
    color: 56/255, 81/255, 90/255, 1
    size_hint_x: 1
    size_hint_y: None
    height: 40
    font_size: 30

<LocationFloatLayout>:
    size_hint_x: 1
    size_hint_y: None
    height: 200
    Wallpaper:
    TodayDateLabel:
        text: self.parent.location + ' ' + self.parent.temperature

<MainApp>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    spacing: 3

<ScrollView>:
    do_scroll_x: False
    do_scroll_y: True

<Nothing>:
    GlobalLayout:
        Container:
